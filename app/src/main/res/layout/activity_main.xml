<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    >

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/roundedImageView13"
        android:layout_width="318dp"
        android:layout_height="155dp"
        android:layout_margin="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:src="@drawable/img12"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:riv_corner_radius="10dp" />

    <TextView
        android:id="@id/textView"
        android:layout_width="204dp"
        android:layout_height="29dp"
        android:fontFamily="@font/poppins"
        android:text="Good Evening, Sree"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:text="What's for dinner? Thee are \n722 restaurants"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="163dp"
        android:layout_height="117dp"
        android:src="@drawable/img11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView1"
        app:layout_constraintTop_toTopOf="parent" />


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/roundedImageView2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roundedImageView13"
        app:riv_corner_radius="10dip" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="145dp"
        android:layout_height="156dp"
        android:src="@drawable/img15"
        app:layout_constraintBottom_toBottomOf="@+id/roundedImageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/roundedImageView2"
        app:layout_constraintTop_toTopOf="@+id/roundedImageView2"
        app:riv_corner_radius="10dip" />

</androidx.constraintlayout.widget.ConstraintLayout>